<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/underbarColor</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <!-- dialog theme. -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:screenOrientation">portrait</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Image 스타일 -->
    <style name="tabTextStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <!-- Image 스타일 -->
    <style name="baseImageStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Image Button 스타일 -->
    <style name="mainImageButton" parent="@style/baseImageStyle">
        <item name="android:layout_height">@dimen/button_size_main</item>
        <item name="android:layout_width">@dimen/button_size_main</item>
    </style>
    <style name="smallImageButton" parent="@style/baseImageStyle">
        <item name="android:layout_height">@dimen/button_size_small</item>
        <item name="android:layout_width">@dimen/button_size_small</item>
    </style>
    <style name="largeImageButton" parent="@style/baseImageStyle">
        <item name="android:layout_height">@dimen/button_size_large</item>
        <item name="android:layout_width">@dimen/button_size_large</item>
    </style>
    <style name="ultraLargeImageButton" parent="@style/baseImageStyle">
        <item name="android:layout_height">@dimen/button_size_ultra_large</item>
        <item name="android:layout_width">@dimen/button_size_ultra_large</item>
    </style>
    <style name="storeImageButton" parent="@style/baseImageStyle">
        <item name="android:layout_height">@dimen/store_image_width</item>
        <item name="android:layout_width">@dimen/store_image_height</item>
    </style>

</resources>
